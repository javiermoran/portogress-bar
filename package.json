{
	"name": "obsidian-sample-plugin",
	"version": "1.0.0",
	"description": "This is a sample plugin for Obsidian (https://obsidian.md)",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"compile-sass": "sass ./styles/styles.scss ./styles.css --style compressed",
		"compile-sass:watch": "sass --watch ./styles/styles.scss ./styles.css",
		"prebuild": "npm run compile-sass",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"postbuild": "mkdir -p dist && cp main.js data.json manifest.json versions.json README.md styles.css dist/"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"obsidian": "latest",
		"sass": "^1.89.2",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	}
}
